{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal",
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json",
                "MONGO_URI": "",
            },
        }
    ]
}